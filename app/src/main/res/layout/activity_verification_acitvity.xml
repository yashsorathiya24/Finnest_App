<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".VerificationAcitvity">

    <!-- Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp"/>

    <TextView
        android:id="@+id/verificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        android:layout_marginTop="64dp"/>

    <TextView
        android:id="@+id/phoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone verification"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/verificationTitle"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"/>

    <TextView
        android:id="@+id/verificationDesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We'll send a code to your number to \nconfirm you own it"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/phoneLabel"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"/>

    <!-- OTP Input -->
    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/verificationDesLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:baselineAligned="false"
        android:weightSum="4">

        <!-- OTP Digit 1 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/otpLayout1"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_margin="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"
                android:hint="-"
                android:gravity="center"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- OTP Digit 2 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/otpLayout2"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_margin="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"
                android:hint="-"
                android:gravity="center"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- OTP Digit 3 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/otpLayout3"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_margin="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"
                android:hint="-"
                android:gravity="center"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- OTP Digit 4 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/otpLayout4"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_margin="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"
                android:hint="-"
                android:gravity="center"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signUpLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/otpContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/resendLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I haven't received a code "
            android:textColor="@color/text_primary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/resendTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(00:30)"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="14sp"
            android:clickable="false"
            android:focusable="false"
            android:enabled="false"
            android:contentDescription="Resend OTP timer or action"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/rounded_paris_green"
        android:layout_marginTop="24dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/signUpLayout"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>

</androidx.constraintlayout.widget.ConstraintLayout>